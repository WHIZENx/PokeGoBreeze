# PokeGoBreeze Environment Variables
# Copy this file to .env and fill in your actual values
# NOTE: Never commit .env file to version control

# ====================
# GitHub & Repository
# ====================

# GitHub Personal Access Token for private repository access
REACT_APP_TOKEN_PRIVATE_REPO=your_github_token_here

# ====================
# Database Configuration
# ====================

# Pok√©mon GO Breeze Database URL (Vercel Postgres)
REACT_APP_POKEGO_BREEZE_DB_URL=postgres://user:password@host/database

# Neon Database API URL
NEON_API_URL=https://app-your-project.dpl.myneon.app

# Neon Authentication URL
NEON_AUTH_URL=https://api.stack-auth.com/api/v1/auth/sessions/current/refresh

# Neon Refresh Token
NEON_REFRESH_TOKEN=your_neon_refresh_token_here

# Neon Auth User ID
NEON_AUTH_USER_ID=your_neon_user_id_here

# ====================
# Vercel Edge Config
# ====================

# Vercel Edge Config URL with token
REACT_APP_EDGE_CONFIG=https://edge-config.vercel.com/ecfg_xxx?token=xxx

# Vercel Edge Config Token
REACT_APP_EDGE_TOKEN=your_edge_token_here

# Vercel Edge Config Read Token
REACT_APP_EDGE_READ_TOKEN=your_edge_read_token_here

# Vercel Edge Config ID
REACT_APP_EDGE_ID=ecfg_your_edge_config_id_here

# ====================
# Stack Auth (Authentication)
# ====================

# Stack Auth Project ID
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id_here

# Stack Auth Publishable Client Key
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=pck_your_publishable_key_here

# Stack Auth Secret Server Key
STACK_SECRET_SERVER_KEY=ssk_your_secret_server_key_here

# ====================
# Security & Encryption
# ====================

# Encryption key for secure data storage (use a strong random string, 40+ characters)
REACT_APP_ENCRYPTION_KEY=your_strong_encryption_key_here

# Encryption salt for additional security (use a strong random string, 40+ characters)
REACT_APP_ENCRYPTION_SALT=your_strong_encryption_salt_here

# ====================
# Application Configuration
# ====================

# Deployment mode (development, staging, production)
REACT_APP_DEPLOYMENT_MODE=development

# Application base URL
REACT_APP_BASE_URL=https://poke-go-breeze.vercel.app

# ====================
# Development Notes
# ====================
# 
# To use these variables:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. Never commit the .env file to git
# 4. Restart development server after changes
#
# For production deployment:
# - Set these variables in your hosting platform (Vercel, Firebase, etc.)
# - Use secure secrets management for sensitive values
# 
# Security Notes:
# - ENCRYPTION_KEY and ENCRYPTION_SALT should be long, random strings
# - Never share authentication tokens or API keys publicly
# - Rotate keys regularly for security best practices
