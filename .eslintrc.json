{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"react-app",
		"react-app/jest",
		"eslint:recommended",
		"plugin:react/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"overrides": [],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"plugins": ["react", "@typescript-eslint"],
	"rules": {
		"@typescript-eslint/no-explicit-any": 0,
		"react-hooks/exhaustive-deps": 0,
		"jsx-a11y/alt-text": 0,
		"react/no-find-dom-node": 0
	},
	"settings": {
		"react": {
			"pragma": "React",
			"version": "detect"
		}
	},
	"ignorePatterns": ["*.js"]
}
